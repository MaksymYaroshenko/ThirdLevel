@model SearchCity

@{
    Layout = "_Layout";
}

<div class="container">
    <form method="post">

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Select city</h2>
                <select name="CityName" asp-for="CityName" class="form-control">
                    @{
                        foreach (var city in Model.CitiesList)
                        {
                            <option asp-for="CityName" value="@city">@city</option>
                        }
                    }
                </select>
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="City" asp-action="CityWeather" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>